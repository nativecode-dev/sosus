{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext",
    "typeRoots": [
      "types"
    ],
    "types": [
      "svelte",
      "@sapper"
    ]
  },
  "exclude": [
    "node_modules/*"
  ],
  "include": [
    "src/**/*"
  ]
}
